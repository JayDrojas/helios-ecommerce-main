{
  "name": "helios-ecommerce",
  "private": true,
  "packageManager": "pnpm@7.17.0",
  "engines": {
    "node": ">=16.17.0"
  },
  "scripts": {
    "dev": "concurrently --prefix none 'next dev' 'pnpm codegen:watch'",
    "build": "pnpm codegen && next build",
    "start": "next start",
    "lint": "next lint && tsc --noemit",
    "prepare": "husky install && echo 'Make sure to run `\u001b[1;91mpnpm codegen\u001b[m` to generate types!'",
    "codegen": "concurrently --prefix [gen] -c auto 'pnpm codegen:graphql' 'pnpm codegen:theme'",
    "codegen:watch": "concurrently --prefix [gen] -c auto 'pnpm codegen:graphql:watch' 'pnpm codegen:theme:watch'",
    "codegen:graphql": "graphql-codegen --config codegen.ts",
    "codegen:graphql:watch": "graphql-codegen --config codegen.ts --watch --silent",
    "codegen:theme:watch": "chakra-cli tokens src/lib/chakra-theme --out node_modules/.pnpm/@chakra-ui+styled-system@2.4.0/node_modules/@chakra-ui/styled-system/dist/theming.types.d.ts --watch",
    "codegen:theme": "chakra-cli tokens src/lib/chakra-theme --out node_modules/.pnpm/@chakra-ui+styled-system@2.4.0/node_modules/@chakra-ui/styled-system/dist/theming.types.d.ts",
    "test": "jest --silent"
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.7.3",
    "@apollo/client": "^3.7.1",
    "@chakra-ui/anatomy": "^2.1.1",
    "@chakra-ui/icons": "^2.0.13",
    "@chakra-ui/react": "^2.4.2",
    "@chakra-ui/skip-nav": "^2.0.12",
    "@contentful/rich-text-react-renderer": "^15.16.2",
    "@contentful/rich-text-types": "^16.0.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@habx/apollo-multi-endpoint-link": "^2.9.0",
    "@hookform/resolvers": "^2.9.10",
    "@mapbox/search-js-react": "1.0.0-beta.14",
    "algoliasearch": "^4.14.2",
    "framer-motion": "^7.6.15",
    "graphql": "^16.6.0",
    "i18next": "^22.0.6",
    "instantsearch.js": "^4.49.2",
    "multipass-js": "^0.1.6",
    "next": "13.0.3",
    "next-i18next": "^13.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.40.0",
    "react-i18next": "^12.0.0",
    "react-icons": "^4.7.1",
    "react-instantsearch-hooks-web": "^6.38.1",
    "swr": "^2.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.2.0",
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "2.13.6",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typed-document-node": "^2.3.7",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-operations": "^2.5.7",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@next/env": "^12.3.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/node": "18.8.3",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "eslint": "8.25.0",
    "eslint-config-next": "13.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "typescript": "4.8.4",
    "vercel": "^28.6.0"
  }
}
